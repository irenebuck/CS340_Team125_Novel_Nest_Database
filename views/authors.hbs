<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src=".js/update_author.js"></script>
<script src="./js/add_author.js"></script>

<div id="authors-table-div">
    <fieldset>
        <legend><strong>Authors</strong></legend>
        <table id="authors-table">
            <thead>
                <tr>
                    <th>Author ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr data-value={{this.author_id}}>
                    <td>{{this.author_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td><button onClick="updateAuthor({{this.author_id}})">Edit</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </fieldset>
</div>

<p>&nbsp;</p>

<div id="insertStore">
    <form method="POST" id="add_author">
        <fieldset class="fields">
            <legend><strong>Add An Author</strong></legend>
            <p>Initials should be included in First Name field</p>
            <label> First Name </label> <input type="text" name="authorfName">
            <label> Last Name</label> <input type="text" name="authorlName">
            <input class="btn" type="submit" id="addAuthorBtn" value="Add Author">
            <input class="btn" type="button" value="Cancel" onClick="showAuthors()">
        </fieldset>
    </form>
</div>