<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<br>

<div id="searchBookDiv">
    <fieldset>
        <legend>Search For A Book</legend>
        <table id="books-table">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Location</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr data-value={{this.book_id}}>
                    <td>{{this.book_id}}</td>
                    <td>{{this.location}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.genre}}</td>
                    <td>{{this.price}}</td>
                    <td><button onclick="deleteBook({{this.book_id}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </fieldset>
</div>

<script src="./js/delete_book.js"></script>

<br />
<div id="searchBookDiv">
    <fieldset>
        <legend>Search For A Book</legend>
        <p>Search by book title using the field below. Partial title is OK too!</p>
        <form id="search-book-html" method="GET" action="/books">
            <label for="input-title">Search by Title: </label>
            <input type="text" name="search" id="input-title-html-search" />
            <input type="submit" />
            <a href="/"><button>Reset</button></a>
        </form>
    </fieldset>
</div>
<br />

<div id="addBookDiv">
    <fieldset>
        <legend>Add Book</legend>
        <p>Please enter all fields</p>
        <form id="add-book-form-ajax">
            <label for="input-location">Location: </label>
            <select name="input-location" id="input-location">
                <option value="">Select a Location</option>
                {{#each stores}}
                <option value="{{this.store_id}}">{{this.store_name}}</option>
                {{/each}}
            </select>

            <label for="input-title">Title: </label>
            <input type="text" name="input-title" id="input-title">

            <label for="input-genre">Genre: </label>
            <input type="text" name="input-genre" id="input-genre">

            <label for="input-price">Price: </label>
            <input type="number" name="input-price" id="input-price">

            <input type="submit">
        </form>
    </fieldset>
</div>
<script src="./js/add_book.js"></script>

<br>
<div id="updateBookDiv">
    <fieldset>
        <legend>Update A Book</legend>
        <form id="update-book-form-ajax">
            <label for="update-bookID">Location: </label>
            <select name="update-bookID" id="update-bookID">
                <option value="">Select a Book</option>
                {{#each data}}
                <option value="{{this.book_id}}">{{this.title}}</option>
                {{/each}}
            </select>

            <label for="input-newPrice">New Price: </label>
            <input type="number" name="input-newPrice" id="input-newPrice">

            <input type="submit">
        </form>
    </fieldset>
</div>

<script src="./js/update_book.js"></script>