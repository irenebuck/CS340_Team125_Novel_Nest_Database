<!-- Header and Nav bar -->
<h1>Novel Nest - Used Book Sellers</h1>

<br>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{!-- Creates Book Table --}}
<table id="books-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the book_id, location, title, genre, and price, in order --}}
        {{#each data}}
        <tr data-value={{this.book_id}}>
            <td>{{this.book_id}}</td>
            <td>{{this.location}}</td>
            <td>{{this.title}}</td>
            <td>{{this.genre}}</td>
            <td>{{this.price}}</td>
            <td><button onclick="deleteBook({{this.book_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_book.js"></script>

<br>

<h2>Search Using an HTML Form</h2>
<p>Search by book title using the field below. Partial title is OK too!</p>
<form id="search-book-html" method='GET' action='/'>
    <label for="input-title">Search by Title: </label>
    <input type="text" name="search-title" id="input-title-html-search">
    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>


<p>&nbsp;</p>

<h2>Add Book</h2>
<p>Please enter all fields</p>
<form id="add-book-form-ajax">
    <label for="input-location">Location: </label>
    <select name="input-location" id="input-location">
        <option value="">Select a Location</option>
        {{#each stores}} {{!-- stores is from the app.js page, query 2 stores:stores --}}
        <option value="{{this.store_id}}">{{this.store_name}}</option>
        {{/each}}
    </select>

    <label for="input-title">Title: </label>
    <input type="text" name="input-title" id="input-title">

    <label for="input-genre">Genre: </label>
    <input type="text" name="input-genre" id="input-genre">

    <label for="input-price">Price: </label>
    <input type="number" name="input-price" id="input-price">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_book.js"></script>


