<!-- Header and Nav bar -->
<h1>Novel Nest - Used Book Sellers</h1>

<h3>Search Using an HTML Form</h3>
<p>Search by book title using the field below. Partial title is OK too!</p>
<form id="search-books-html" method='GET' action='/'>
    <label for="input-title">Search by Title: </label>
    <input type="text" name="title" id="input-title-html-search">

    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>


{{!-- Creates Book Table --}}
<table id="books-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.book_id}}</td>
            <td>{{this.location}}</td>
            <td>{{this.title}}</td>
            <td>{{this.genre}}</td>
            <td>{{this.purchased_price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

