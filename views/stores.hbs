<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<table id="stores-table">
    <thead>
        <tr>
            <th>Store ID</th>
            <th>Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr data-value={{this.store_id}}>
            <td>{{this.store_id}}</td>
            <td>{{this.store_name}}</td>
            <td>{{this.store_address}}</td>
            <td><button onclick="deleteStore({{this.author_id}})">Delete</button></td>
            <td><button onClick="updateStore({{this.author_id}})">Edit</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p>&nbsp;</p>

<div id="insertStore">
    <form method="POST" id="add-store-form-ajax">
        <fieldset class="fields">
            <legend><strong>Add A Store</strong></legend>
            <label> Name </label> <input type="text" name="storeName" id="storeName">
            <label> Store Address</label> <input type="text" name="storeAddress" id="storeAddress">
            <input type="submit">
        </fieldset>
    </form>
</div>
<script src="./js/add_store.js"></script>
