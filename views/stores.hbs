<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="./js/add_store.js"></script>

<div id="stores-table-div">
    <fieldset>
        <legend><strong>Stores</strong></legend>
        <table id="stores-table">
            <thead>
                <tr>
                    <th>Store ID</th>
                    <th>Name</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr data-value={{this.store_id}}>
                    <td>{{this.store_id}}</td>
                    <td>{{this.store_name}}</td>
                    <td>{{this.store_address}}</td>
                    <td><button onClick="updateAuthor({{this.author_id}})">Edit</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </fieldset>
</div>

<p>&nbsp;</p>

<div id="insertStore">
    <form method="POST" id="add_store">
        <fieldset class="fields">
            <legend><strong>Add A Store</strong></legend>
            <label> Name </label> <input type="text" name="storeName">
            <label> Store Address</label> <input type="text" name="storeAddress">
            <input class="btn" type="submit" id="addStoreBtn" value="Add Store">
            <input class="btn" type="button" value="Cancel" onClick="showStores()">
        </fieldset>
    </form>
</div>
